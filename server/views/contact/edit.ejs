<%- include ../partials/header.ejs %>

<%- include ../partials/navbar.ejs %>

<main class="container">
    <h1 class="mt-4"><%= title %></h1>
    <hr>
    <div class="row">
        <div class="col-3"><!-- used to center actual form --></div>
        <div class="col-5">
            <fieldset class="border px-4">
                <legend class="w-auto">Contact Info</legend>
                <form method="POST">
                    <div class="form-group">
                        <label for="name">Name: </label>
                        <input class="form-control" type="text" name="name" value="<%= editableContact.name %>" required autofocus>
                    </div>
                    <div class="form-group">
                        <label for="phoneNumber">Phone Number: </label>
                        <input class="form-control" type="tel" name="number" value="<%= editableContact.number %>" required >
                    </div>
                    <div class="form-group">
                        <label for="email">Email Address: </label>
                        <input class="form-control" type="email" name="email" value="<%= editableContact.email %>" required >
                    </div>
                    <br>
                    <input type="submit" class="btn btn-primary" value="Add Contact">
                    <a href="/contact-list" class="btn btn-warning"> Cancel</a>
                </form>
            </fieldset>
        </div>
    </div>

</main>

<%- include ../partials/footer.ejs %>
